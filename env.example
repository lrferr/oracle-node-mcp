# Configurações do Oracle Database
# NOTA: Para múltiplas conexões, use ORACLE_CONNECTIONS ou config/multi-connections.json
# Este arquivo .env é usado como fallback quando múltiplas conexões não estão configuradas

# Configuração única (método antigo)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USER=your_username
ORACLE_PASSWORD=your_password

# Múltiplas conexões (método novo - JSON string)
# ORACLE_CONNECTIONS={"connections":{"production":{"user":"HR_PROD","password":"prod_password","connectString":"prod-server:1521/PROD","description":"Production Database"},"development":{"user":"HR_DEV","password":"dev_password","connectString":"dev-server:1521/DEV","description":"Development Database"}},"defaultConnection":"development"}

# Configurações do MCP Server
MCP_SERVER_NAME=oracle-monitor
MCP_SERVER_VERSION=1.0.0

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/oracle-mcp.log

# Configurações de Monitoramento
MONITOR_INTERVAL=300000
CRITICAL_SCHEMAS=HR,SCOTT,SYSTEM
SENSITIVE_TABLES=USERS,ACCOUNTS,TRANSACTIONS

# Configurações de Notificação
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL=admin@company.com
